{
  "name": "talent-trove-server",
  "module": "src/app.ts",
  "type": "commonjs",
  "scripts": {
    "dev": "bun --hot run src/app.ts",
    "build": "rimraf dist && swc src -d dist --source-maps",
    "start": "cross-env NODE_ENV=production  node  dist/src/app.js",
    "lint": "eslint \"src/**/*.ts\" --no-ignore",
    "lint:fix": "eslint \"src/**/*.ts\" --fix --no-ignore",
    "format": "prettier --write \"src/**/*.{js,ts,json,md}\" ",
    "format:check": "prettier --check \"src/**/*.{js,ts,json,md}\" ",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@types/express": ">=5.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "chalk": "^5.3.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "eslint-plugin-node": "^11.1.0",
    "express": ">=5.0.0",
    "express-rate-limit": "^7.4.0",
    "graphql": "^16.9.0",
    "graphql-voyager": "^2.1.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@swc/cli": "^0.4.1-nightly.20240914",
    "@swc/core": "^1.7.26",
    "@types/bun": "latest",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.7.0"
  },
  "bun-create": {
    "presets": [
      "typescript"
    ]
  },
  "imports": {
    "@/*": "./src/*"
  },
  "_moduleAliases": {
    "@": "src"
  }
}
